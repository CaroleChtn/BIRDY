

<%# banner de la show %>
<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))<%= @mission.img %>">
</div>

<%# balise <u> pour souligner %>

<div class="container d-flex justify-content-center align-items-between">
  <div class="d-flex row">
    <%# titre et description %>
    <div>
    <h1 class="text-align left mt-2"><%= @mission.title%> <u><%= @mission.duration %></u> </h1>
      <%= @mission.description %></p>
    </div>

    <%# div pour l'image de la map %>
    <div>
      <%= image_tag @mission.jour_par_jour_img, width: "800px" %>
    </div>
  </div>

    <%# form %>
    <div class="form col-sm-4 mt-2 sticky">
      <h2>Réserver votre voyage</h2>
      <div data-controller="flatpickr">
        <%= simple_form_for [@mission, @booking], html: { data: { controller: 'flatpickr' } } do |f| %>
          <div class="d-flex flex-column">
            <div class="d-flex align-items-center justify-content-center">
              <%= f.input :start_date, label: 'from', as: :string, input_html: { data: { flatpickr_target: 'startDateInput' } } %>
              <%= f.input :end_date, label: 'to', as: :string, input_html: { data: { flatpickr_target: 'endDateInput', } } %>
            </div>
            <%= f.submit 'Book now!', class: 'btn btn-primary align-self-center' %>
          </div>
        <% end %>
      </div>
    </div>

</div>



<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item tabs-underlined" role="presentation">
    <button class="nav-link tab-underlined active" id="itineraire-tab" data-bs-toggle="tab" data-bs-target="#itineraire" type="button" role="tab" aria-controls="itineraire" aria-selected="true">Itinéraire Jour par Jour</button>
  </li>
  <li class="nav-item tabs-underlined" role="presentation">
    <button class="nav-link tab-underlined" id="experience-tab" data-bs-toggle="tab" data-bs-target="#experience" type="button" role="tab" aria-controls="experience" aria-selected="false">Expérience</button>
  </li>
  <li class="nav-item tabs-underlined" role="impact">
    <button class="nav-link tab-underlined" id="impact-tab" data-bs-toggle="tab" data-bs-target="#impact" type="button" role="tab" aria-controls="impact" aria-selected="false">Impact Local</button>
  </li>
    <li class="nav-item tabs-underlined" role="presentation">
    <button class="nav-link tab-underlined" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Infos Voyage</button>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade" id="itineraire" role="tabpanel" aria-labelledby="itineraire-tab">
    <p><%= @mission.jour_par_jour_text.html_safe %></p>
  </div>
  <div class="tab-pane fade show active" id="experience" role="tabpanel" aria-labelledby="experience-tab">
