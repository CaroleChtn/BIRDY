<div class="banner video-wrapper">
  <video src="https://www.doublesens.fr//img/video/capsule-video.mp4" id="capsule-video" muted playsinline autoplay loop width="100%"></video>
  <div class="container w-50" id="banner-text">
    <h2 class="text-center">Des expériences mémorables, <br><em>des actions qui ont du sens</em></h2>
    <%= form_with url: missions_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query, params[:query], class: "form-control me-3 w-75", placeholder: "Je veux aller à..." %>
      <%= submit_tag "C'est parti !", class: "btn btn-primary btn-search" %>
    <% end %>
  </div>
</div>

<div class="container" style="margin-top: 0px;margin-bottom: 50px;font-size: 26px;">
  <div class="title-birdy">
    <h2><strong>Les voyages approuvés par les Birdies</strong></h2>
  </div>

   <div class="cards container-index" data-controller="favorites">
    <% @missions.sample(3).each do |mission|%>
      <div class="card-index my-2 mx-2">
        <div class= "card-index-image">
            <i class="fa-solid fa-heart coeur_favoris d-flex <%= Favorite.find_by(user: current_user, mission: mission) ? 'fav-red' : 'fav-black' %> " data-action="click->favorites#fav" data-favorites-mission-id-param="<%= mission.id %>"></i>
            <img src="<%= mission.img%>" alt="mission_img" class="card-img-top">
        </div>
        <div class="card-index-bot mx-2">
          <div class="card-index-text">
            <h3 class="text-left"><%= link_to mission.title, mission_path(mission) %></h3>
            <%# mission.categories.uniq.each do |cat| %>
            <%#= cat.display_name %>
            <%# end %>
          </div>
          <div class="card-index-price d-flex justify-content-between card-index-price-index">
            <div class="d-flex justify-content-center align-items-flex-start">
            <div class="d-flex align-items-start flex-column">
              <div>
                <% mission.tags.first(1).each do |tag| %>
                  <div class="badge bg-secondary tag-name-card-index"><%= tag.name %></div>
                <% end %>
              </div>
              <div>
                <% mission.tags.last(1).each do |tag| %>
                  <div class="badge bg-secondary tag-name-card-index"><%= tag.name %></div>
                <% end %>
              </div>
            </div>
            </div>
            <div></div>
            <div class="d-flex flex-column align-items-end">
              <div class="mt-auto">
                <p class="card-index-p"><%= mission.duration%></p>
                <h4 class="card-index-h4"><%= mission.price%>€</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center mt-5 mb-5">
  <button>
    <%= link_to "Nos expériences", missions_path %>
  </button>
</div>

