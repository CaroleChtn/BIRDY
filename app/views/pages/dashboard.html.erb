<div>
  <h2>Your bookings</h2>

    <h6 class="title" >En attente de validation</h6>
    <% @current_bookings.each do |booking| %>
      <%= render 'missions/mission_card', mission: booking.mission, booking: booking %>
    <% end %>


    <h6 class="title1">Expériences à venir</h6>
    <% @future_bookings.each do |booking| %>
      <%= render 'missions/mission_card', mission: booking.mission, booking: booking %>
    <% end %>


      <h6 class="title2">Expériences passées</h6>
      <% @past_bookings.each do |booking| %>
            <%= render 'missions/mission_card', mission: booking.mission, booking: booking %>
      <% end %>
</div>




<h1> Favorites</h1>
<div class = "container-index">
  <div data-controller="favorites">
    <% @missions.each do |mission|%>
      <i class="fa-solid fa-heart" data-action="click->favorites#fav" data-favorites-mission-id-param="<%= mission.id %>"></i>
      <div class="card-index">
        <%= image_tag mission.img, class:"card-img-top", alt:"mission" %>
        <div class="card-trip-infos" id="card-index">
          <div class="card-trip-infos-top">
            <h2><%=mission.title%></h2>
            <div>
              <ul>
                <li><i class="fa-solid fa-star mt-3"></i><i class="fa-solid fa-star mt-3"></i><i class="fa-solid fa-star mt-3"></i><i class="fa-solid fa-star mt-3"></i><i class="fa-solid fa-star mt-3"></i></li>
              </ul>
            </div>
          </div>
          <a href="<%= mission_path(mission.id) %>" class="btn btn-primary w-100 mt-3"> <strong><%=mission.price%>€</strong></a>
        </div>
      </div>
    <% end%>
  </div>
</div>
