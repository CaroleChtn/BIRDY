<% sender = message.user == current_user %>

<div class="message <%= 'sender' if sender %>">
  <div id="message-<%= message.id %>">
    <div class="message-content">
      <strong><%= message.user.name %></strong>
      <p><%= message.content %></p>
    </div>
    <div class="message-infos">
      <p><span class="user-name"><%= sender ? 'You' : message.user.name %></span> at <%= message.created_at.strftime("%H:%M") %></p>
    </div>
  </div>
</div>
