<% if (message.user.name == current_user.name) %>
  <div id="message-<%= message.id %>" style="text-align: end;">
    <small>
      <strong><%= message.user.name %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </small>
    <p><%= message.content %></p>
  </div>
<% else %>
  <div id="message-<%= message.id %>">
    <small>
      <strong><%= message.user.name %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </small>
    <p><%= message.content %></p>
  </div>
<% end %>
