<div class="container w-50">
  <h2 class="fw-light text-center py-4">Mot de passe oublié ?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs py-3">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Recevoir les instructions", class: "btn btn-dark w-100 rounded" %>
    </div>
  <% end %>

    <div class="d-flex text-center justify-content-center py-5">
      <%= link_to "Créer un compte", new_registration_path(resource_name), class: "me-3 pe-3 border-end border-dark border-2" %><br />
      <%= link_to "Se connecter", new_session_path(resource_name)%><br />
    </div>
</div>
